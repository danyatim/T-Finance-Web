# T-FinanceBackend .env.template
# Copy this file to `.env` (outside of VCS) and fill values for your environment.

# JWT settings
JWT_ISSUER=TFinanceBackend
JWT_AUDIENCE=TFinanceFrontend
JWT_KEY=please_replace_with_a_strong_random_value_of_at_least_32_chars
JWT_EXPIRES_IN_HOURS=1

# Data protection (optional) - mount a PKCS#12 file and provide path inside container
DATA_PROTECTION_CERT_PATH=
DATA_PROTECTION_CERT_PASSWORD=

# Database (default uses SQLite in Data/users.db)
# To override, set ConnectionStrings__Default to a valid connection string (e.g. Postgres)
ConnectionStrings__Default=Data Source=Data/users.db

# SMTP (Yandex sample values; fill real credentials)
Smtp__Host=smtp.yandex.ru
Smtp__Port=587
Smtp__Username=youremail@example.com
Smtp__Password=your_smtp_password
Smtp__FromEmail=youremail@example.com
Smtp__FromName=T-Finance

# YooKassa (payment) - fill when available
YooKassa__ShopId=
YooKassa__SecretKey=
YooKassa__ReturnUrl=https://t-finance-web.ru/

# Application URLs
App__BaseUrl=https://t-finance-web.ru
App__FrontendUrl=https://t-finance-web.ru

# Optional: set ASPNETCORE_URLS to bind Kestrel (not required, Dockerfile sets it)
# ASPNETCORE_URLS=http://+:8080

# IMPORTANT: Do NOT commit real `.env` to the repository. Use this template and keep secrets out of Git.
