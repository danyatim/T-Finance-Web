{
  "name": "t-finance",
  "private": true,
  "version": "0.1.0",
  "description": "T-Finance frontend (Vite + React)",
  "type": "module",
  "engines": {
    "node": ">=18 <26"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite --host",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview --port 4173",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,css,scss,html}'",
    "clean": "rimraf dist .temp",
    "ci": "npm ci && npm run lint && npm run build:prod"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  }
}
